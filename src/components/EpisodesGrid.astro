---
// src/components/EpisodesGrid.astro
import episodes from "../data/episodes.json";
---
<section class="mx-auto max-w-5xl px-4 py-12">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Episodes</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    {episodes.map((ep) => (
      <a
        href={ep.link}
        class="group block overflow-hidden rounded-lg bg-white dark:bg-gray-800 shadow hover:shadow-lg transition"
      >
        <!-- カバー画像枠 -->
        <div class="relative w-full h-48 bg-gray-100 dark:bg-gray-700">
          <img
            src={ep.cover}
            alt={ep.title}
            class="object-cover w-full h-full transition-transform group-hover:scale-105"
          />
        </div>
        <!-- タイトルと日付 -->
        <div class="p-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            {ep.title}
          </h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            {new Date(ep.date).toLocaleDateString("ja-JP", {
              year: "numeric",
              month: "short",
              day: "numeric"
            })}
          </p>
        </div>
      </a>
    ))}
  </div>
</section>
