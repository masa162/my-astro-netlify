// JavaScriptのみの場合、または型をpropsで直接受け取る場合
const { episode } = Astro.props; 
// episodeオブジェクトには url, title, cover, dateなどのプロパティが含まれていると想定
---
<a href={episode.url} class="episode-card block border border-gray-200 dark:border-gray-700 rounded-lg shadow hover:shadow-md transition-shadow duration-200 overflow-hidden bg-white dark:bg-gray-800">
  {episode.cover && (
    <img src={episode.cover} alt={`${episode.title} Cover`} class="w-full h-32 sm:h-40 object-cover" />
  )}
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1 truncate" title={episode.title}>
      {episode.title}
    </h3>
    {episode.date && (
      <p class="text-xs text-gray-500 dark:text-gray-400">
        {new Date(episode.date).toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>
    )}
    {/* ここにチャプター番号などを追加しても良いでしょう */}
  </div>
</a>

<style>
/* 必要に応じてスタイルを追加 */
.episode-card:hover h3 {
    color: var(--accent-regular); /* TailwindのテーマカラーやCSS変数を使うと良いでしょう */
}
</style>