---
// src/components/EpisodeCard.astro
const { episode } = Astro.props;
// episodeオブジェクトには url, title, cover, date, chapter などのプロパティが含まれていると想定
---
<a href={episode.url} class="episode-card group block overflow-hidden rounded-lg border border-gray-200 bg-white shadow transition-shadow duration-200 hover:shadow-md dark:border-gray-700 dark:bg-gray-800">
  {episode.cover && (
    <div class="overflow-hidden">
      <img src={episode.cover} alt={`${episode.title} Cover`} class="h-32 w-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105 sm:h-40" />
    </div>
  )}
  <div class="p-4">
    <h3 class="mb-1 truncate text-lg font-semibold text-gray-900 group-hover:text-peach-600 dark:text-white dark:group-hover:text-peach-400" title={episode.title}>
      {episode.title}
    </h3>
    {episode.date && (
      <p class="text-xs text-gray-500 dark:text-gray-400">
        {new Date(episode.date).toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>
    )}
    {episode.chapter && ( 
      <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
        Chapter: {episode.chapter}
      </p>
    )}
  </div>
</a>
<style>
/* 基本的にTailwindでスタイリング */
</style>