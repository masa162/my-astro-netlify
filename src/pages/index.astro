---
// src/pages/index.astro
import Header from "../components/Header.astro";
import HeroSection from "../components/HeroSection.astro";
import EpisodesGrid from "../components/EpisodesGrid.astro";
---
<!DOCTYPE html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Peach Float – Home</title>
    <!-- ダークモード切替スクリプト -->
    <script src="/theme-init.js" inline></script>
  </head>
  <body class="font-sans bg-peach-50 dark:bg-gray-900">
    <!-- ① ヘッダー -->
    <Header />

    <!-- ② main 部分（pt-16 でヘッダーの高さ分余白をとる） -->
    <main class="pt-16">
      <!-- Hero セクション -->
      <HeroSection />

      <!-- Episodes グリッド -->
      <EpisodesGrid />
    </main>
  </body>
</html>
